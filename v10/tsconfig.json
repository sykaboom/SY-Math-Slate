{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@core/config/aiProviderRegistry": [
        "./src/core/foundation/registries/aiProviderRegistry"
      ],
      "@core/config/themeTokens": ["./src/core/ui/theming/tokens/themeTokens"],
      "@core/config/typography": ["./src/core/ui/theming/engine/typography"],
      "@core/config/*": ["./src/core/foundation/policies/*"],
      "@core/contracts": ["./src/core/foundation/schemas/index"],
      "@core/contracts/*": ["./src/core/foundation/schemas/*"],
      "@core/engine/*": ["./src/core/runtime/command/*"],
      "@core/extensions/*": ["./src/core/runtime/plugin-runtime/*"],
      "@core/runtime/modding": ["./src/core/runtime/modding/index"],
      "@core/runtime/modding/*": ["./src/core/runtime/modding/*"],
      "@core/math/*": ["./src/core/domain/math/*"],
      "@core/migrations/*": ["./src/core/pipelines/migrations/*"],
      "@core/persistence/*": ["./src/core/pipelines/persistence/*"],
      "@core/export/*": ["./src/core/pipelines/export/*"],
      "@core/sanitize/*": ["./src/core/security/sanitization/*"],
      "@core/theme/*": ["./src/core/ui/theming/engine/*"],
      "@core/themes/*": ["./src/core/ui/theming/presets/*"],
      "@core/types/*": ["./src/core/foundation/types/*"],
      "@core/*": ["./src/core/*"],
      "@ui/*": ["./src/ui/*"],
      "@features/chrome/*": ["./src/features/chrome/*"],
      "@features/editor/*": ["./src/features/editor/*"],
      "@features/collaboration/*": ["./src/features/collaboration/*"],
      "@features/governance/*": ["./src/features/governance/*"],
      "@features/platform/*": ["./src/features/platform/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}
